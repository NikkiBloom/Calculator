<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_rowSpan="1"
    android:layout_rowWeight="1"
    android:background="#F7F4FB"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculator"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="(with gen z attention device)"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="200dp"
        app:columnCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:rowCount="5"
        app:useDefaultMargins="true">

        <Button
            android:id="@+id/Bclear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#40216A"
            android:text="Clear"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_column="1"
            app:layout_row="0"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/Bdelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#40216A"
            android:text="Delete"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_column="2"
            app:layout_row="0"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/Bdivide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#40216A"
            android:text="%"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_column="3"
            app:layout_row="0"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/Bone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#8E6BBD"
            android:text="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_column="0"
            app:layout_row="1"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/Bfour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#8E6BBD"
            android:text="4"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_column="0"
            app:layout_row="2"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/Bseven"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#8E6BBD"
            android:text="7"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_column="0"
            app:layout_row="3"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/Bzero"
            android:layout_width="183dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#8E6BBD"
            android:text="0"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_row="4"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/Btwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#8E6BBD"
            android:text="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_column="1"
            app:layout_row="1"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/Bfive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#8E6BBD"
            android:text="5"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_column="1"
            app:layout_row="2"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/Beight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#8E6BBD"
            android:text="8"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_column="1"
            app:layout_row="3"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/Bthree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#8E6BBD"
            android:text="3"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_column="2"
            app:layout_row="1"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/Btimes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#40216A"
            android:text="X"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_column="3"
            app:layout_row="1"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/Bsix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#8E6BBD"
            android:text="6"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_column="2"
            app:layout_row="2"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/Bminus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#40216A"
            android:text="-"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_column="3"
            app:layout_row="2"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/Bnine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#8E6BBD"
            android:text="9"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_column="2"
            app:layout_row="3"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/Bdecimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#8E6BBD"
            android:text="."
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_column="2"
            app:layout_row="4"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/Bequals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#40216A"
            android:text="="
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_column="3"
            app:layout_row="4"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/Bplus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#40216A"
            android:text="+"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_column="3"
            app:layout_row="3"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/calcDisplay"
        android:layout_width="0dp"
        android:layout_height="61dp"
        android:text="<calcput>"
        android:textAlignment="textEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="@+id/gridLayout"
        app:layout_constraintStart_toStartOf="@+id/gridLayout" />

    <ImageView
        android:id="@+id/uiaicat"
        android:layout_width="149dp"
        android:layout_height="148dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/spinningcat" />

</androidx.constraintlayout.widget.ConstraintLayout>